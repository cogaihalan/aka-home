{
  "format": "custom",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "URL slug",
          "placeholder": "my-blog-post"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Enter post title"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Short summary for listings and SEO"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": { "width": 1200, "height": 630 },
          "thumbnails": []
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write your blog post content",
          "allowTargetBlank": true,
          "multi": "paragraph,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item,image,embed,preformatted"
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": "Author name"
        }
      },
      "published_date": {
        "type": "Date",
        "config": {
          "label": "Published date",
          "placeholder": "Select publish date"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "e.g. design, tips"
              }
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Override title for SEO and social"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Brief description for search and social"
        }
      }
    }
  }
}
