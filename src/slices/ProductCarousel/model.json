{
  "id": "product_carousel",
  "name": "Product Carousel",
  "description": "An animated product carousel that automatically fetches products from the API with customizable navigation and auto-play options",
  "imageUrl": "",
  "display": "list",
  "type": "SharedSlice",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Product Carousel with Auto-fetch",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "StructuredText",
          "config": {
            "label": "Title",
            "placeholder": "Enter the carousel title",
            "single": "heading1,heading2,heading3,heading4,heading5,heading6"
          }
        },
        "subtitle": {
          "type": "StructuredText",
          "config": {
            "label": "Subtitle",
            "placeholder": "Enter a subtitle or description",
            "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
          }
        },
        "contentAlignment": {
          "type": "Select",
          "config": {
            "label": "Content Alignment",
            "placeholder": "Choose the text alignment for content",
            "options": ["left", "center", "right"],
            "default_value": "center"
          }
        },
        "queryPromotionProducts": {
          "type": "Boolean",
          "config": {
            "label": "Query Promotion Products",
            "default_value": false,
            "placeholder_false": "No",
            "placeholder_true": "Yes"
          }
        },
        "productCount": {
          "type": "Number",
          "config": {
            "label": "Number of Products to Show",
            "placeholder": "10"
          }
        },
        "itemsPerView": {
          "type": "Number",
          "config": {
            "label": "Items Per View",
            "placeholder": "3"
          }
        },
        "itemsPerViewTablet": {
          "type": "Number",
          "config": {
            "label": "Items Per View (Tablet)",
            "placeholder": "2"
          }
        },
        "itemsPerViewMobile": {
          "type": "Number",
          "config": {
            "label": "Items Per View (Mobile)",
            "placeholder": "1"
          }
        },
        "showNavigation": {
          "type": "Boolean",
          "config": {
            "label": "Show Navigation Arrows",
            "default_value": true,
            "placeholder_false": "Hide navigation arrows",
            "placeholder_true": "Show navigation arrows"
          }
        },
        "showDots": {
          "type": "Boolean",
          "config": {
            "label": "Show Dots Navigation",
            "default_value": true,
            "placeholder_false": "Hide dots navigation",
            "placeholder_true": "Show dots navigation"
          }
        }
      }
    }
  ]
}
